<%- include("partials/header") %>

<div class="row justify-content-center align-items-center py-3">
    <div class="col-6">
        <div class="input-group">
            <span class="input-group-text" >I am feeling like a</span>
            <select class="form-select" id="emotion">
                <option value="joyful" <%= locals.emotion === 'joyful' ? 'selected' : '' %>>Joyful</option>
                <option value="scared" <%= locals.emotion === 'scared' ? 'selected' : '' %>>Scared</option>
                <option value="sad" <%= locals.emotion === 'sad' ? 'selected' : '' %>>Sad</option>
                <option value="angry" <%= locals.emotion === 'angry' ? 'selected' : '' %>>Angry</option>
                <option value="disgusted" <%= locals.emotion === 'disgusted' ? 'selected' : '' %>>Disgusted</option>
                <option value="anxious" <%= locals.emotion === 'anxious' ? 'selected' : '' %>>Anxious</option>
                <option value="envious" <%= locals.emotion === 'envious' ? 'selected' : '' %>>Envious</option>
                <option value="embarrassed" <%= locals.emotion === 'embarrassed' ? 'selected' : '' %>>Embarrassed</option>
                <option value="bored" <%= locals.emotion === 'bored' ? 'selected' : '' %>>Bored</option>
            </select>
            <select class="form-select" id="character">
                <option value="cat" <%= locals.character === 'cat' ? 'selected' : '' %>>Cat</option>
                <option value="dog" <%= locals.character === 'dog' ? 'selected' : '' %>>Dog</option>
                <option value="baby" <%= locals.character === 'baby' ? 'selected' : '' %>>Baby</option>
                <option value="homer" <%= locals.character === 'homer' ? 'selected' : '' %>>Homer</option>
            </select>
            <button class="btn btn-outline-dark" id="search" type="button" value="Search">Search</button>
        </div>
    </div>
</div>
<% for (let i = 0; i < locals.gifs.data.length; i++) { %>
<%  let gif = gifs.data[i] %>
<%  let start = (i % 3 === 0); %>
<%  let end = (i % 3 === 2); %>
<%  if (start) { %>
<div class="row justify-content-center align-items-center py-3">
<%  } %>
    <div class="col-4">
        <iframe src=<%=gif.embed_url%> width="100%" height="270" frameborder="0" class="giphy-embed" allowfullscreen></iframe>
    </div>
<%  if (end) { %>
</div>
<%  } %>
<% }%>

<%- include("partials/footer") %>